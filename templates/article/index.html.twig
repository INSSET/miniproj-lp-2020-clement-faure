{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% if articles %}
    {% for a in articles %}
        {% if a.published == 1 %}
            <h1>
                <a href= "{{ path('article_show', {id : a.idArticle }) }}"></a>
                {{ a.title }}
            </h1>
            <h2>{{ a.content }}</h2>
            <h3>{{ a.publicationDate|date('jS F Y') }}</h3>
        {% endif %}
    {% endfor %}
{% endif %}

{% endblock %}
