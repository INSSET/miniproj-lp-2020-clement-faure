{# /app/templates/article/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Cr√©ation d'un article{% endblock %}

{% block body %}
    <h1>Edition d'un article</h1>

    {# If there are any errors on the form, display them #}
    {% set formErrors = form.vars.errors.form.getErrors(true) %}
    {% if formErrors|length %}
        <div class="alert alert-danger">
            <ul>
                {% for error in formErrors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {# Render the Form #}
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.published) }}
    {{ form_widget(form) }}
    <button class="btn">Update</button>
    {{ form_end(form) }}
{% endblock %}